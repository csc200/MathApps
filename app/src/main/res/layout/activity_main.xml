<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.nvcc.tkanchanawanchai6403.mathapps.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/display" android:gravity="right"/>
    <Button
            android:text="First 100 odd numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oddButton"
            app:layout_constraintTop_toBottomOf="@id/display"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <Button
            android:text="Diamond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diamondButton"
            app:layout_constraintTop_toBottomOf="@id/oddButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <Button
            android:text="Factorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/factorialButton"
            app:layout_constraintTop_toBottomOf="@id/diamondButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"/>
    <Button
            android:text="Fibonacci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fibonacciButton"
            app:layout_constraintTop_toBottomOf="@id/factorialButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"/>
    <EditText
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:text="0"
            android:ems="10"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="10dp"
            android:id="@+id/editText"
            android:gravity="right|center"
            android:textSize="36sp"
            android:background="@android:color/darker_gray"
            tools:ignore="MissingConstraints"/>

</android.support.constraint.ConstraintLayout>
